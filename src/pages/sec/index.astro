---
import { getCollection } from 'astro:content';
import Section from '../../components/base/Section.astro';
import General from '../../layouts/General.astro';

// Get all sections and sort them
const sections = await getCollection('sections');

// Get only top-level sections (those without parents)
const topLevelSections = sections.filter(section => !section.data.parent)
  .sort((a, b) => a.data.name.localeCompare(b.data.name));
---

<General title="Sections" description="Blog post sections.">
  <h1 class="mb-8 text-4xl font-bold text-center">Sections</h1>
  
  <div class="space-y-8">
    {topLevelSections.map(section => (
      <Section {...section.data} />
    ))}
  </div>
</General>