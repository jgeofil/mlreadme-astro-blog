---
import { getCollection } from 'astro:content';
import Tag from '../../components/Tag.astro';
import Default from '../../layouts/Default.astro';

const tags = (await getCollection('tags')).sort((a, b) => a.id.localeCompare(b.id))

---
<Default>
	<ul>{
		(tags.map((tag) => 
			<Tag {...tag}></Tag>
		))
		}
	</ul>
</Default>
				
