---
import Icon from "./base/Icon.astro"

const today = new Date()

const {
	links = [
		{ name: 'About us', href: '/about' },
		{ name: 'Contact us', href: '/contact' },
		{ name: 'Privacy policy', href: '/privacy' },
		{ name: 'Investor relations', href: '/invest', off: true }
	],
	socials = [
		{name: 'github', color: false},
		{name: 'x', color: false},
		{name: 'medium', color: false}
	]
} = Astro.props
---

<footer class="w-full h-full bg-neutral-100">
	<div id="main-container" class="container mx-auto px-6 pt-12">
		<div class="grid-rows-auto grid grid-cols-1 gap-4 text-center lg:grid-cols-4 lg:gap-6">
			<div class="h-34 col-span-2 float-left  pb-2">
				<h4>Subscribe to our newsletter</h4>
				<form>
					<input
						class="m-2 rounded-md border border-blue-300 p-2 shadow"
						type="email"
						required="true"
					/>
					<button
						class="m-2 rounded-md border border-blue-300 fill-blue-200 p-2 shadow hover:border-blue-700 hover:drop-shadow-2xl"
						>Subscribe</button
					>
				</form>
			</div>
			<div class="h-34  lg:col-span-2">
				<div class="my-2 grid grid-cols-2 auto-cols-max width-full">
					<div>
						<div class="flex justify-evenly">
							{	
								socials.map((soc) => <Icon server:defer name={soc.name} color={soc.color}></Icon>)
							}
						</div>
					</div>
					<div>
						<ul class="text-left">
							{
								links.map(
									(link) =>
										!link.off && (
											<li class="list-none">
												<a class="neutral-link" href={link.href}>
													{link.name}
												</a>
											</li>
										)
								)
							}
						</ul>
					</div>
				</div>
			</div>
			<div class="h-16  p-3 lg:col-span-4">
				&copy; {today.getFullYear()} Jeremy Georges-Filteau. All rights reserved.
			</div>
		</div>
	</div>
</footer>

