---
export const prerender = true;
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';

interface postcard {
	postLimit: number;
	styleMain: boolean;
}

const Props = Astro.props

const posts = (await getCollection('blog')).sort(
	(a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
).slice(0, Props.postLimit);
---
<section>
	<ul>
		{
			posts.map((post) => (
			<li class:list={Props.styleMain ? 'style-main' : ''}>
				<a href={`/blog/${post.slug}/`}>
					<img width={720} height={360} src={post.data.heroImage} alt="" />
					<h4 class="title">{post.data.title}</h4>
					<p class="date">
						<FormattedDate date={post.data.pubDate} />
					</p>
				</a>
			</li>
			))
		}
	</ul>
</section>


<style>
	
	ul {
		display: flex;
		flex-wrap: wrap;
		gap: 2rem;
		list-style-type: none;
		margin: 0;
		padding: 0;
	}
	li {
		width: calc(50% - 1rem);
	}
	li * {
		text-decoration: none;
		transition: 0.2s ease;
	}
	li:first-child.style-main {
		width: 100%;
		margin-bottom: 1rem;
		text-align: center;
	}
	li:first-child.style-main img {
		width: 100%;
	}
	li:first-child.style-main .title {
		font-size: 2.369rem;
	}
	li img {
		margin-bottom: 0.5rem;
		border-radius: 12px;
	}
	li a {
		display: block;
	}
	.title {
		margin: 0;
		color: rgb(var(--black));
		line-height: 1;
	}
	.date {
		margin: 0;
		color: rgb(var(--gray));
	}
	li a:hover h4,
	li a:hover .date {
		color: rgb(var(--accent));
	}
	ul a:hover img {
		box-shadow: var(--box-shadow);
	}
	@media (max-width: 720px) {
		ul {
			gap: 0.5em;
		}
		li {
			width: 100%;
			text-align: center;
		}
		li:first-child {
			margin-bottom: 0;
		}
		li:first-child .title {
			font-size: 1.563em;
		}
	}
</style>