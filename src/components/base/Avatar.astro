---
const defSrc =
	'https://images.unsplash.com/photo-1633332755192-727a05c4013d?q=80&w=2680&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D'

const { fname = 'Jeremy Georges-Filteau', src = defSrc, alt = '' } = Astro.props
---

<div class="flex items-stretch gap-4">
	<img src={src} alt={alt} class="aspect-square h-8 w-8 rounded-full object-cover" />
	<div>
		<span class="text-sm/tight text-gray-900">{fname}</span>
	</div>
</div>
