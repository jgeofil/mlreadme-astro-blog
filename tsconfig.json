{
	"extends": "astro/tsconfigs/base",
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist"],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@components/*": ["src/components/*"],
			"@base/*": ["src/components/base/*"],
			"@layouts/*": ["src/layouts/*"],
			"@utils/*": ["src/utils/*"],
			"@blocks/*": ["src/components/blocks/*"],
			"@db/*": ["src/db/*"],
		},
		"allowJs": true,
		"verbatimModuleSyntax": false
	},
	"plugins": [
		{
			"name": "@astrojs/ts-plugin"
		}
	]
}
